{
  "name": "TabView",
  "version": "1.1.0",
  "description": "Get a visual and interactive overview of all your tabs",
  "permissions": [
    "<all_urls>",
    "activeTab",
    "storage",
    "unlimitedStorage",
    "tabs"
  ],
  "manifest_version": 2,
  "background": {
    "scripts": [
      "common.js",
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "icon/icon16.png",
      "32": "icon/icon32.png",
      "48": "icon/icon48.png",
      "128": "icon/icon128.png"
    },
    "default_title": "TabView"
  },
  "icons": {
    "16": "icon/icon16.png",
    "32": "icon/icon32.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },
  "web_accessible_resources": [
    "popup.html",
    "content.css",
    "modal.html",
    "images/delete-button.png",
    "images/scan.svg",
    "images/help.svg"
  ]
}