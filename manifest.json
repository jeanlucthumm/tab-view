{
  "name": "TabView",
  "version": "0.0.1",
  "description": "Get a visual and interactive overview of all your tabs",
  "permissions": [
    "<all_urls>",
    "activeTab",
    "storage",
    "tabs"
  ],
  "manifest_version": 2,
  "background": {
    "scripts": [
      "common.js",
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    },
    "default_title": "TabView"
  },
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  },
  "web_accessible_resources": [
    "popup.html",
    "content.css",
    "modal.html"
  ]
}